{
  "name": "angular-webpack-benchmark",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "generate": "tsc generate.ts && node generate.js && rimraf generate.js",
    "build": "yarn run webpack",
    "build:happy": "yarn run webpack --env.HAPPYPACK",
    "build:prod": "yarn run ngc && yarn run webpack --env.PROD --env.AOT && yarn run clean:ngc",
    "build:prod:happy": "yarn run ngc && yarn run webpack --env.PROD --env.AOT --env.HAPPYPACK && yarn run clean:ngc",
    "clean:ngc": "rimraf aot_temp",
    "clean": "rimraf dist aot_temp",
    "webpack": "node --max_old_space_size=16384 node_modules/webpack/bin/webpack.js",
    "webpack-dev-server": "node --max_old_space_size=16384 node_modules/webpack-dev-server/bin/webpack-dev-server.js",
    "ngc": "ngc -p ./tsconfig.prod.json",
    "start": "yarn run webpack-dev-server --config webpack.config.js --watch --content-base dist",
    "rimraf": "rimraf"
  },
  "dependencies": {
    "@angular/common": "6.0.9",
    "@angular/compiler": "6.0.9",
    "@angular/compiler-cli": "6.0.9",
    "@angular/core": "6.0.9",
    "@angular/forms": "6.0.9",
    "@angular/http": "6.0.9",
    "@angular/platform-browser": "6.0.9",
    "@angular/platform-browser-dynamic": "6.0.9",
    "@angular/router": "6.0.9",
    "core-js": "2.5.7",
    "reflect-metadata": "0.1.12",
    "rxjs": "6.2.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-optimizer": "^0.6.8",
    "@types/node": "10.5.2",
    "angular-router-loader": "^0.8.0",
    "angular2-template-loader": "^0.6.2",
    "clean-webpack-plugin": "0.1.19",
    "css-loader": "1.0.0",
    "file-loader": "1.1.11",
    "fork-ts-checker-webpack-plugin": "0.4.3",
    "happypack": "5.0.0",
    "html-webpack-plugin": "3.2.0",
    "json-loader": "0.5.7",
    "node-sass": "4.9.2",
    "optimize-js-plugin": "0.0.4",
    "raw-loader": "0.5.1",
    "rimraf": "^2.6.1",
    "rmfr": "^2.0.0",
    "sass-loader": "7.0.3",
    "source-map-loader": "0.2.3",
    "style-loader": "0.21.0",
    "to-string-loader": "1.1.5",
    "ts-loader": "4.4.2",
    "tslib": "1.9.3",
    "typescript": "2.9.2",
    "url-loader": "1.0.1",
    "webpack": "4.16.1",
    "webpack-dev-middleware": "3.1.3",
    "webpack-dev-server": "3.1.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/pglazkov/angular-webpack-benchmark.git"
  },
  "engines": {
    "node": ">= 6.9.4",
    "npm": ">= 3"
  }
}
