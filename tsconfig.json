{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./tsc-out",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,    
    "noEmitHelpers": true,
    "importHelpers": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "baseUrl": "src"
  },
  "exclude": [
    "node_modules",
    "wwwroot",
    "src/**/*.aot.ts",
    "src/**/**.aot.ts",
    "generate.ts"
  ],
  "compileOnSave": false,
  "buildOnSave": false
}
